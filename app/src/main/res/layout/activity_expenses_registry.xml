<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <EditText
            android:id="@+id/editText_vehicle_expense_registry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:editable="false"
            android:drawableLeft="@mipmap/ic_launcher_car"
            android:drawableRight="@mipmap/ic_launcher_select"
            android:hint="@string/editText_vehicle_expense_registry" />


        <EditText
            android:id="@+id/editText_type_expense_expense_registry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:editable="false"
            android:drawableLeft="@mipmap/ic_launcher_method_expense"
            android:hint="@string/editText_type_expense_expense_registry" />

        <EditText
            android:id="@+id/editText_ticket_expense_registry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_ticket_expense"
            android:hint="@string/fieldNumberTickect" />

        <EditText
            android:id="@+id/editText_ticket_provider_name_expense_registry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_provider"
            android:hint="@string/fieldProviderName" />

        <EditText
            android:id="@+id/editText_date_expense_registry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="date"
            android:drawableLeft="@mipmap/ic_launcher_calendar"
            android:hint="@string/fieldDateTickect" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_image_item_vehicles"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/ic_launcher_tarjet"/>
        <Spinner
            android:id="@+id/spinnerMethodplayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dialog"
            app:backgroundTint="#03A9F4">
        </Spinner>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B3AEAE" />

        <EditText
            android:id="@+id/editTextTotalImport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:drawableLeft="@mipmap/ic_launcher_total_expense"
            android:hint="@string/fieldTotalTickect" />


        <LinearLayout
            android:id="@+id/linear_layout_field_buttons_expense_registry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="88dp"
            android:weightSum="2">


            <Button
                android:id="@+id/button_cancel_expense_registry"
                android:layout_height="50dp"
                android:layout_width="10dp"
                android:layout_weight="1"
                android:background="@color/buttonSecundaryBrangroung"
                android:textColor="@color/buttonSecundaryText"
                android:text="@string/button_cancel"/>

            <Button
                android:id="@+id/button_accept_expense_registry"
                android:layout_height="50dp"
                android:layout_width="10dp"
                android:layout_weight="1"
                android:background="@color/buttonSecundaryBrangroung"
                android:textColor="@color/buttonSecundaryText"
                android:text="@string/button_accept"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>