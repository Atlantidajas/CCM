<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vehicleStatus.VehiclesStatusListActivity">


    <LinearLayout
        android:id="@+id/linearLayoud1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/testView_title_registrarion_numbre"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/fieldVehicleRegistration"
            android:textColor="@color/headListView"
            android:textAlignment="center"
            android:layout_marginLeft="41dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/testView_title_brand"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/fieldVehicleBrand"
            android:textColor="@color/headListView"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/testView_title_model"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/fieldVehicleModel"
            android:textColor="@color/headListView"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/testView_title_date_itv"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/fieldITV"
            android:textColor="@color/headListView"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/testView_title_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/fieldStatus"
            android:textColor="@color/headListView"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView_vehicles_status_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoud1" />


</androidx.constraintlayout.widget.ConstraintLayout>