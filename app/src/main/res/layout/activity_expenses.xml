<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.expenses.ExpensesActivity">

    <TextView
        android:id="@+id/textView_title_registry_expense"
        android:layout_width="0dp"
        android:layout_height="100dp"/>


    <LinearLayout
        android:id="@+id/linear_layout_field_vehicle_expense_registry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_vehicle_expense_registry"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_brand"
            android:text="@string/editText_vehicle_expense_registry" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <CheckBox
            android:id="@+id/checkBox_vehicle_expense_registry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_field_expense_expense_registry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_field_vehicle_expense_registry">

        <EditText
            android:id="@+id/editText_expense_expense_registry"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_car"
            android:text="@string/editText_expense_expense_registry" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <CheckBox
            android:id="@+id/checkBox_expense_expense_registry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_field_ticket_expense_registry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_field_expense_expense_registry">

        <EditText
            android:id="@+id/editText_ticket_expense_registry"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_license_plate"
            android:text="@string/editText_ticket_expense_registry" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <CheckBox
            android:id="@+id/checkBox_ticket_expense_registry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_field_date_expense_registry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_field_ticket_expense_registry">

        <EditText
            android:id="@+id/editText_date_expense_registry"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_calendar"
            android:text="@string/editText_date_expense_registry" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <CheckBox
            android:id="@+id/checkBox_date_expense_registry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_field_method_of_payment_expense_registry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_field_date_expense_registry">

        <EditText
            android:id="@+id/editText_method_of_payment_expense_registry"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_launcher_calendar"
            android:text="@string/editText_method_of_payment_expense_registry" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <CheckBox
            android:id="@+id/checkBox_method_of_payment_expense_registry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_field_buttons_expense_registry"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/button_accept_expense_registry"
        android:layout_width="142dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:text="@string/button_accept_expense_registry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_field_method_of_payment_expense_registry"
        app:layout_constraintVertical_bias="0.674" />


</androidx.constraintlayout.widget.ConstraintLayout>