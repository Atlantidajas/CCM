<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.expenses.ExpenseHistoricActivity">



    <LinearLayout
        android:id="@+id/textView_expense_historic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/testView_title_logotype_expense_historic"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/testView_title_logotype_expense_historic"
            android:textAlignment="center"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/testView_title_logo_vehecle_expense_historic"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/testView_title_logo_vehecle_expense_historic"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/testView_title_registration_number_vehicle_expense_historic"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/testView_title_registration_number_vehicle_expense_historic"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/testView_title_date_expense_historic"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/testView_title_fecha_expense_historic"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/imageView_item_logo_method_playment_expense"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/imageView_item_logo_method_playment_expense"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/testView_title_logo_user_expense_historic"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/testView_title_logo_user_expense_historic"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView_expense_historic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_expense_historic" />




</androidx.constraintlayout.widget.ConstraintLayout>