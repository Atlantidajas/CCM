<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_list_sesions">

    <ImageView
        android:id="@+id/imageView_image_item_sessions"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_registrationNumber_item_sessions"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_session_date_item_sessions"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView_session_hours_item_sessions"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageView_driving_item_sessions"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>