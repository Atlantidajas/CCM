<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_list_vehicles">


    <ImageView
        android:id="@+id/imageView_image_item_vehicles"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/textView_registrationNumber_item_vehicles"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_brand_item_vehicles"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView_model_item_vehicles"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView_dateITV_item_vehicles"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>